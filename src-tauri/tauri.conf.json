{
	"build": {
		"distDir": "../dist",
		"devPath": "http://localhost:5000",
		"beforeDevCommand": "",
		"beforeBuildCommand": "",
		"withGlobalTauri": true
	},
	"tauri": {
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"copyright": "",
			"category": "Game",
			"shortDescription": "",
			"longDescription": "",
			"deb": {
				"depends": [],
				"useBootstrapper": false
			},
			"macOS": {
				"frameworks": [],
				"minimumSystemVersion": "",
				"useBootstrapper": false,
				"exceptionDomain": "",
