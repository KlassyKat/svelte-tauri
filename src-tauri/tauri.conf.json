				"entitlements": null
			},
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"allowlist": {
			"all": true
		},
		"windows": [
			{
				"title": "svelte-tauri",
				"width": 800,
				"height": 600,
				"resizable": true,
				"decorations": true
			}
		],
		"security": {
			"csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
		}
	}
